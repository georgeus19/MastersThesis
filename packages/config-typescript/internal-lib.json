{
    "compilerOptions": {
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "module": "NodeNext",
      "target": "es2022",
      "moduleResolution": "NodeNext",
      "preserveWatchOutput": true,
      "skipLibCheck": true,
      "isolatedModules": true,
      "noEmit": true,
      "declaration": true,
      "sourceMap": true,
      "declarationMap": true,
      "strict": true
    },
    "include": [
      "src/**/*"
    ]
  }